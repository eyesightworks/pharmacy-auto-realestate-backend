{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "lib": ["ES2021"],

    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist",

    "removeComments": true,
    "strict": true,
    "strictPropertyInitialization": false,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "incremental": true,

    "baseUrl": "./src",
    "paths": {
      "@common/*": ["common/*"],
      "@database/*": ["database/*"],
      "@modules/*": ["modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "prisma",
    "test",
    "**/*.spec.ts"
  ]
}